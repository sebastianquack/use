<p id="notice"><%= params[:notice] %></p>

<h1>New transaction</h1>

<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :seller_id %><br>
    <%= f.select :seller_id, User.order("name").collect {|u| [u.name, u.id]} %>
  </div>
  <div class="field">
    <%= f.label :buyer_id %><br>
    <%= f.select :buyer_id, User.order("name").collect {|u| [u.name, u.id]} %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :stock_id %><br>
    <%= f.select :stock_id, Stock.order("name").collect {|s| [s.name + " ("+s.symbol+")", s.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
