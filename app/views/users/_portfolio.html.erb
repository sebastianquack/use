<div class="portfolio">
<% portfolio = user.portfolio %>
<% balance = user.balance %>
<% ranks = user.ranks %>

<p>
  <strong>Name:</strong>
  <%= user.name %>
</p>

<h1>Ihr Konto</h1>

<p>
    <strong>Grundeinsatz:</strong>
    <%= portfolio[:cash_in] %>U (Rang <%= ranks[:cash_in][:rank] %>)
</p>

<p>
  <strong>aktueller Kontostand:</strong>
  <%= balance %>U (Rang <%= ranks[:balance][:rank] %>)
</p>

<p>
  <strong>Gesamtgewinn/-Verlust absolut:</strong>
  <%= portfolio[:total_profit] %>U (Rang <%= ranks[:profit_abs][:rank] %>)
</p>

<p>
  <strong>Gesamtgewinn/-Verlust relativ:</strong>
  <%= portfolio[:total_profit_rel] %>% (Rang <%= ranks[:profit_rel][:rank] %>)
</p>

<p>
  <table>
      <tr>
          <th>Tickersymbol</th>
          <th>Titel</th>
          <th>Anteile</th>
          <th>Einstiegskurs</th>
          <th>Investment</th>
          <th>aktueller Kurs</th>
          <th>aktueller Wert</th>
          <th>m√∂glicher Gewinn/Verlust jetzt</th>
          <th>realer Gewinn/Verlust bisher</th>
      </tr>
     
      <h1>Ihre Utopie-Aktien</h1>
  <% portfolio[:stocks].each do |stock_id, stock_data| %>
        
  <tr>
      <td><%= stock_data[:stock].symbol %></td>
      <td><%= stock_data[:stock].name %></td>
      <td><%= stock_data[:amount] %></td>
      <td><%= stock_data[:investment] %>U</td>
      <td><% if stock_data[:amount] == 0 %>
              <%= 0 %>
          <% else %>
                <%= stock_data[:avg_price] %>U
            <% end %>
      </td>
      <td><%= stock_data[:stock].current_price %>U</td>
      <td><%= stock_data[:value] %>U</td>
      <td><%= stock_data[:value] - stock_data[:investment] %>U (<%= rel_percent stock_data[:investment], stock_data[:value] %>)</td>
      <td><%= stock_data[:profit] %>U</td>
  </tr>


  <% end %>

    </table>

</p>

<p>
  <strong>Zahl der Anteile insgesamt:</strong>
  <%= portfolio[:total_stocks] %> (Rang <%= ranks[:num_stocks][:rank] %>)
</p>


<p>
  <strong>Investment absolut:</strong>
  <%= portfolio[:total_investment] %>U (Rang <%= ranks[:investment_abs][:rank] %>)
</p>

<p>
  <strong>Anteil des Grundeinsatzes investiert:</strong>
  <%= portfolio[:total_investment_rel] %>% (Rang <%= ranks[:investment_rel][:rank] %>)
</p>

<p>
  <strong>aktueller Portfoliowert:</strong>
  <%= portfolio[:total_value]%>U (Rang <%= ranks[:value_abs][:rank] %>)
</p>

<p>
  <strong>Entwicklung des Investments:</strong>
  <%= portfolio[:total_value_rel]%>% (Rang <%= ranks[:value_rel][:rank] %>)
</p>

</div>
