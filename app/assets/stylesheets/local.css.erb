/**** PORTFOLIO ****/

.portfolio {
	background:white;
	color:black;
	padding:4%;
	width:950px;
}

.portfolio .u:after {
	/*content: "U";*/
	background-image: url("/assets/u-shiny.png");
}	

.portfolio h2 {
	font-size: 1.5em;
	margin-bottom: 10px;
	font-weight: bold;
}

.portfolio strong {
	font-weight: normal;
	padding-right: 1em;
}

.portfolio .username {
	font-size: 2em;
	margin-bottom: 20px;
}

.portfolio #bigtime {
	font-size: 3em;
	margin-bottom: 10px;
	font-weight:bold;
}

.portfolio .rank {
	opacity: 0.7;
}

.portfolio .rank:before {
	content: "\00a0 ";
}

.portfolio .spacer {
}


.portfolio table {
	text-align: left;
	border-collapse: collapse;
	margin-bottom: 40px;
}

.portfolio table  + table {
	margin-top: -20px;
}

.portfolio table.portfolio-table  + table {
	margin-top: -10px;
}

.portfolio table th {
	font-weight:bold;
}

.portfolio table td {
	font-weight: normal;
	text-align:right;
}

.portfolio table thead th {
	text-transform: uppercase;
	font-weight:bold;
}

.portfolio table tbody th {
	font-weight:normal;
	min-width:100px;
}

.portfolio table th,
.portfolio table td {
	padding:1ex;
	border:black solid;
	border-width: 0 1px 1px 0;
	font-size: 16px;
}

.portfolio .portfolio-table {
	width:100%;
}

.portfolio .portfolio-table thead th + th {
	text-align: left;
}

.portfolio table.info-table th {
	font-weight: bold;
}

.portfolio table.info-table th,
.portfolio table.info-table td {
	padding-left:0;
	padding-top: 0;
	padding-bottom: 0;
	border:none;
}

.portfolio table.info-table-small th,
.portfolio table.info-table-small td {
	font-weight: 80%;
}

.portfolio table b {
	font-weight: bold;
}

/*fonts*/

.portfolio h2,
.portfolio table th,
.portfolio table thead th,
.portfolio #bigtime,
.portfolio strong {
	font-family:"UnicaHaas";
	letter-spacing: 0.02ex;
}

.portfolio table td,
.portfolio .username {
	font-family:'ProximaNova';
}

/**** PRINT ****/

@media only screen {
	.only-print {
		display:none;
	}
}

@media print {

	html {height:100%;}

	body {
		background: white;
		color:black;
		width:100%;
		height:100%;
	}

	.u:after {
		/*content: "U";*/
		background-image: url("/assets/u-shiny.png");
	}	

	.print-header {
		position:absolute;
		top:0;
		right:0;
	}

	.print-footer {
		position:absolute;
		bottom:0;
		left:0;
	}

	.portfolio .print-header img {
		width:120px;
		position:absolute;
		right:0;
	}

	.portfolio .print-footer img {
		width:100%;
	}

	.portfolio {
		page-break-after:always;
		padding:0;
		position:relative;
		height:100%;
	}

	.portfolio:last-child {
		page-break-after:avoid;
	}

 }

