body {
	background-color: #323232;
	color: #ffffff;
}

* {
	padding: 0;
	margin: 0;
	border: 0;
}

@font-face {
  font-family: 'ProximaNovaThin';
	src: url('ProximaNova-Thin.otf');
}

@font-face {
  font-family: 'ProximaNovaLight';
	src: url('Proxima Nova Light.otf');
}

h1, h2, h3 {
	font-family: 'ProximaNovaThin';
}

h2, h3 {
	font-size: 36px;
}

a, p, label {
	font-family: 'ProximaNovaLight';
}

a {
	color: #fff;
}

.scroll-container {
	position: fixed;
	white-space: nowrap;
	z-index: 50;
	overflow: hidden;
	width: 100%;
}

.scroll-content {
	position: absolute;
	top: 0px;
	z-index: 100;
}

#scroll-container-1 {
	top: -10px;
	height: 140px;
	line-height: 130px;
	background-color: #282828;
}

#scroll-content-1 {
	font-family: 'ProximaNovaThin';
	color: #ffffff;
	font-size: 100px;
	left: 0px;
}

span.scroll-highlight {
	font-family: 'Arial Black';
	position: relative;
	top: 5px;
	line-height: 130px;
}

span.formlink {
	color: #fff;
	text-decoration: underline;
	cursor: pointer;
}

#scroll-container-2 {
	top: 130px;
	background-color: #00FF00;
	box-shadow: 0px 1px 1px #282828;
	height: 65px;
}

#scroll-content-2 {
	font-family: 'ProximaNovaThin';
	color: #ffffff;
	font-size: 42px;
	line-height: 65px;
	left: 0px;
}

.claim {
	font-family: 'ProximaNovaLight';
	position: fixed;
	left: 50px;
	bottom: 50px;
	width: 70%;
	z-index: 40;
	font-size: 35px;
	display: none;
}

#claim-1 {
	display: block;
}

.icon {
	height: 126px;
	background-size: contain;
	background-repeat: no-repeat;
	position: fixed;
	right: 0px;
	bottom: 50px;
	width: 20%;
	z-index: 40;
	display: none;
}

#icon-1 {
	background-image: url('u-himmel.png');
	display: block;
}

#icon-2 {
	background-image: url('u-arena.png');
}

#icon-3 {
	background-image: url('himmel.png');
}

.page {
	position: relative;
	top: 175px;
	width: 100%;
	clear: both;
}

.row {
	clear: both;
}

.float-all * {
	float: left;
	margin-right: 20px;
}

.col-2 {
	float: left;
	width: 45%;
	padding-right: 5%;
	min-width: 200px;
}

.page img.full-background {
	width: 100%;
	z-index: -100;
	clear: both;
}

#spacer-1 {
	position: relative;
	top: 195px;
	height: 240px;
}

#page-4 .page-content, #page-5 .page-content {
	position: relative;		
}

#page-4 img.full-background, #page-5 img.full-background {
	position: absolute;		
	top: 0px;
	left: 0px;
}

#page-4 .page-content {
	padding: 75px 50px 100px 50px;
}

#page-4 .page-content p {
	font-size: 18px;
	line-height: 24px;
	margin-bottom: 24px;
}

#page-4 .col-2 {
	margin-bottom: 20px;
}

.ip-logo {
	width: 80%;
	display: none;
}

#page-5 .page-content {
	padding: 75px 100px 150px 100px;
}

#page-5 .page-content h2 {
	margin-bottom: 40px;
}

#page-5 .page-content p, label, input {
	color: #000;
}

#page-5 .page-content p, label {
	font-size: 18px;
}

#page-5 .page-content label {
	font-size: 16px;
	line-height: 19px;
}

#page-5 .page-content label {
	text-transform: uppercase;
}

#page-5 .page-content form input, textarea, button {
	width: 97%;
	padding: 5px;
	color: #969696;
	font-family: 'ProximaNovaLight';
	font-size: 18px;
	line-height: 20px;
	border: 1px #000 solid;
	z-index: 48;
	position: relative;
}

#page-5 input {
	height: 20px;
}

#page-5 button {
	height: 32px;
	color: #000;
	background-color: #ddd;
}

#utopia_title {
	height: 30px;
	margin-bottom: 25px;
}

#utopia_description {
	height: 206px;
	margin-bottom: 20px;
}

#page-5 .page-content form input.file_input {
	width: 70%;
}

#photo_attachment_container {
    position: relative;
		margin-bottom: 18px;
}

#photo_attachment_container .wrapper {
    opacity: 0;
    cursor: pointer;
    position: absolute;
    top: 0;
    right: 0;
		width: 30%;
		min-width: 150px;
    z-index: 2;
}

#photo_attachment_container .wrapper:hover {
    opacity: 0.0;
}

#photo_attachment_container button {
    position: absolute;
    width: 30%;
    min-width: 150px;
    right: 0;
    top: 0;
    z-index: 1;
}

#utopia_realization {
	height: 85px;
	margin-bottom: 20px;
}

#utopia_risks {
	height: 85px;	
	margin-bottom: 20px;
}

#page-5 .page-content p {
	margin-bottom: 5px;
}

.effects div {
	width: 11.5%;
	margin-bottom: 20px;
	min-width: 100px;
}

.effects input {
	height: 30px;
	margin-bottom: 5px;
}

#utopia_email {
	width: 300px;
	height: 30px;
}

.stier-logo {
	width: 15%;
	position: absolute;
	right: 10px;
	bottom: 15%;
	display: none;
}

#page-6 {
	background-image: url('bottom-gradient.png');
	background-repeat: repeat-x;
	background-color: #fff;
	z-index: 10;
}

#page-6 .page-content {
	padding: 75px 50px 150px 50px;
	color: #000;
}

#page-6 .page-content h3 {
	color: #E2B224;
	margin-bottom: 36px;
}

#page-6 .page-content p {
	font-size: 18px;
	max-width: 450px;
	margin-bottom: 24px;
}

div.logos img {
	height: 58px;
}	

@media only screen and (max-width: 1000px) {
	
	#claim-1 {
		display: none;
	}
	#claim-2 {
		display: none;
	}
	#claim-3 {
		display: none;
	}

	#icon-1 {
		display: none;
	}
	#icon-2 {
		display: none;
	}
	#icon-3 {
		display: none;
	}

	#spacer-1 {
		display: none;
	}

	.ip-logo {
		display: none;
	}

	.col-2 {
		width: 90%;
	}

	#scroll-header-1, #scroll-header-2 {
		position: absolute;
	}

	#page-4 .page-content {
		padding: 200px 10px 200px 10px;
	}

	#page-5 .page-content {
		padding: 10px 10px 10px 10px;
	}

	#page-5 img.full-background {
		position: relative;
	}

	#page-6 .page-content {
		padding: 40px 10px 10px 10px;
	}
	
	
	section {
		height: auto !important;
	}

}